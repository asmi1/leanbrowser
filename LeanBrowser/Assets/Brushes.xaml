<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Brushes -->
    <SolidColorBrush x:Key="transBrush" Color="Transparent" />
    <SolidColorBrush x:Key="whiteBrush" Color="White" />
    <SolidColorBrush x:Key="blackBrush" Color="Black" />
    <SolidColorBrush x:Key="greenBrush" Color="Green" />
    <SolidColorBrush x:Key="redBrush" Color="#FFE81123" />
    <SolidColorBrush x:Key="darkGrayBrush" Color="DarkGray" />

    <SolidColorBrush x:Key="lightBrush" Color="#FFF2F2F2" />
    <SolidColorBrush x:Key="lightBrush2" Color="#FFCCCCCC" />
    <SolidColorBrush x:Key="lightTransBrush" Color="#99CCCCCC" />

    <SolidColorBrush x:Key="darkBrush" Color="#FF7F7F7F" />
    <SolidColorBrush x:Key="darkBrush2" Color="#FF444444" />

    <!-- Background -->
    <SolidColorBrush x:Key="lightBtnMouseOver" Color="#19000000" />
    <SolidColorBrush x:Key="lightBtnPressed" Color="#4C000000" />
    <SolidColorBrush x:Key="dangerBtnMouseOver" Color="#FFE81123" />
    <SolidColorBrush x:Key="dangerBtnPressed" Color="#FFF1707A" />

</ResourceDictionary>